{
    "name": "adnanmula/new-game-notifier",
    "type": "project",
    "license": "MIT",
    "description": "new-game-notifier",
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "adnanmula/telegram-send-message": "^0.0.5",
        "doctrine/dbal": "^3",
        "robmorgan/phinx": "^0.16",
        "symfony/console": "^7.2",
        "symfony/dotenv": "^7.2",
        "symfony/flex": "^2.4",
        "symfony/framework-bundle": "^7.2",
        "symfony/http-client": "7.2.*",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "adnanmula/coding-standard": "^0.0.12",
        "phpro/grumphp": "^2.10",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true,
            "symfony/flex": true
        }
    },
    "autoload": {
        "psr-4": {
            "AdnanMula\\Steam\\NewGameNotifier\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdnanMula\\Steam\\NewGameNotifier\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "rm -rf .git/hooks",
            "cp -r scripts/git-hooks .git/hooks"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*"
        }
    }
}
